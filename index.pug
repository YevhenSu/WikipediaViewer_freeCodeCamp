body(ng-app='WikiViewer' ng-controller='MainCtrl')
  div.headerfreeCodeCamp WikiViewer
  #search.wrapper.upward
    a.text(href='https://en.wikipedia.org/wiki/Special:Random' target='_blank') Click here for a random article
    br
    form(ng-submit='search()')
      input(type='text' ng-model='searchTxt')
      .commutator
    p.text#icon Click icon to search
  .wrapper
    ul
      a(ng-href='{{result.page}}' target='_blank' ng-repeat='result in results')
        li
          h1 {{result.title}}
          p {{result.body}}